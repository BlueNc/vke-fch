{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": [
      "argocd/apps/.+\\.yaml$",
      "buildkit/.+\\.yaml$",
      "cert-manager-config/.+\\.yaml$",
      "code-server/manifests/.+\\.yaml$",
      "dbgate/.+\\.yaml$"
    ]
  },
  "platformAutomerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
